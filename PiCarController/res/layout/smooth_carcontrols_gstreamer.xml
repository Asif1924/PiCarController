<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >    
    
    <com.alliconsulting.picarcontroller.GStreamerView
		android:id="@+id/gstreamview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

	<TextView
      	android:id="@+id/textView1"      	
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="15dp"
		android:text="Diagnostics"
      	android:textSize="20sp"      	       	
      	android:textColor="#ffffff"
      	/>
		
	<com.alliconsulting.picarcontroller.VerticalSeekBar
	    android:id="@+id/seekBar1"
	    android:layout_height="fill_parent"
		android:layout_width="40dp"		
		android:layout_marginLeft="15dp"
		android:layout_marginTop="32dp"		
		android:layout_marginBottom="15dp"
	 />

	<ImageButton
		android:id="@+id/rightButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:src="@drawable/rightarrow" 
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="62dp"
		/>

	<ImageButton
		android:id="@+id/downButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:src="@drawable/downarrow"
	    android:layout_toLeftOf="@+id/rightButton"
	    android:layout_alignParentBottom="true"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="15dp"
		/>	
		
	<ImageButton
		android:id="@+id/nogoButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:layout_alignRight="@+id/downButton"
	    android:src="@drawable/nogoimage" 
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="62dp"
		/>		
		
	<ImageButton
		android:id="@+id/leftButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:src="@drawable/leftarrow" 
	    android:layout_toLeftOf="@+id/nogoButton"
	    android:layout_marginRight="15dp"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="62dp"
		 />	

	<ImageButton
	    android:id="@+id/upButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:layout_alignRight="@+id/downButton"
	    android:src="@drawable/uparrow" 
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="105dp"
	    />
		
	<ImageButton
		android:id="@+id/stopButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:src="@drawable/stopimage" 
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="15dp"	    
		/>	
		
	<ImageButton
		android:id="@+id/startButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:src="@drawable/startimage" 
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="15dp"
	    android:layout_marginLeft="80dp"
		/>	

	<ImageButton
		android:id="@+id/hornButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:src="@drawable/hornimage" 
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="15dp"
	    android:layout_toRightOf="@+id/startButton"
		/>	
		
	<ImageButton
		android:id="@+id/frontlightsButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:maxHeight="32dp"
	    android:maxWidth="32dp"
	    android:src="@drawable/frontlightsoff"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="15dp"
	    android:layout_toRightOf="@+id/hornButton"
		/>	
    
</RelativeLayout>
